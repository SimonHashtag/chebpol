PKG_CPPFLAGS=@CPPFLAGS@ @FFTW_CFLAGS@ @EXTRA@ $(SHLIB_OPENMP_CXXFLAGS)
PKG_CFLAGS=$(C_VISIBILITY) @EXTRA@ $(SHLIB_OPENMP_CFLAGS)
PKG_CXXFLAGS=$(C_VISIBILITY) @EXTRA@ $(SHLIB_OPENMP_CXXFLAGS)
PKG_LIBS=@LIBS@ @FFTW_LIBS@ $(BLAS_LIBS) $(FLIBS) $(SHLIB_OPENMP_CFLAGS) -Lalglib -lalglib

all: $(SHLIB)

OBJECTS=chebpol.o
OBJECTS=chebpol.o rbfalglib.o alglib/libalglib.a
alglib/libalglib.a:
	(cd alglib/src; $(CXX) $(ALL_CPPFLAGS) $(ALL_CXXFLAGS) -c *.cpp; $(AR) -rcs ../libalglib.a *.o)

clean:
	@-rm -f alglib/libalglib.a alglib/src/*.o *.o $(SHLIB)
